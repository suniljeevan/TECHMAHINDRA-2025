<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd" id="WebApp_ID" version="5.0">
  <display-name>UMS</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description></description>
    <display-name>RegistrationController</display-name>
    <servlet-name>RegistrationController</servlet-name>
    <servlet-class>org.cms.controllers.RegistrationController</servlet-class>
    <init-param>
      <param-name>username</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>driver</param-name>
      <param-value>com.mysql.jdbc.Driver</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationController</servlet-name>
    <url-pattern>/RC</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>FetchStudentSController</display-name>
    <servlet-name>FetchStudentSController</servlet-name>
    <servlet-class>org.cms.controllers.FetchAllStudentSController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FetchStudentSController</servlet-name>
    <url-pattern>/FetchAll</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>StudentServlet</display-name>
    <servlet-name>StudentServlet</servlet-name>
    <servlet-class>org.cms.controllers.StudentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StudentServlet</servlet-name>
    <url-pattern>/Student</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UpdateStudentController</display-name>
    <servlet-name>UpdateStudentController</servlet-name>
    <servlet-class>org.cms.controllers.UpdateStudentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateStudentController</servlet-name>
    <url-pattern>/update-student</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>DeleteStudentController</display-name>
    <servlet-name>DeleteStudentController</servlet-name>
    <servlet-class>org.cms.controllers.DeleteStudentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteStudentController</servlet-name>
    <url-pattern>/delete-student</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>UpdateStudentPostController</display-name>
    <servlet-name>UpdateStudentPostController</servlet-name>
    <servlet-class>org.cms.controllers.UpdateStudentPostController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateStudentPostController</servlet-name>
    <url-pattern>/update-studentPost</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>LoginController</display-name>
    <servlet-name>LoginController</servlet-name>
    <servlet-class>org.cms.controllers.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginController</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>org.cms.controllers.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
  <context-param>
    <param-name>admin</param-name>
    <param-value>admin@presidencyuniversity.in</param-value>
  </context-param>
</web-app>